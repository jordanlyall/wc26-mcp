{
  "outputDirectory": "website",
  "cleanUrls": true,
  "rewrites": [
    { "source": "/api/matches", "destination": "/api/matches" },
    { "source": "/api/teams", "destination": "/api/teams" },
    { "source": "/api/groups", "destination": "/api/teams?_endpoint=groups" },
    { "source": "/api/venues", "destination": "/api/venues" },
    { "source": "/api/schedule", "destination": "/api/schedule" },
    { "source": "/api/team-profile", "destination": "/api/team-profile" },
    { "source": "/api/city-guide", "destination": "/api/city-guide" },
    { "source": "/api/historical-matchups", "destination": "/api/historical-matchups" },
    { "source": "/api/nearby-venues", "destination": "/api/venues" },
    { "source": "/api/visa-info", "destination": "/api/visa-info" },
    { "source": "/api/fan-zones", "destination": "/api/fan-zones" },
    { "source": "/api/what-to-know-now", "destination": "/api/what-to-know-now" },
    { "source": "/api/monitor", "destination": "/api/monitor" },
    { "source": "/api/telegram", "destination": "/api/telegram" }
  ],
  "headers": [
    {
      "source": "/api/telegram",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    },
    {
      "source": "/api/((?!telegram).*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, s-maxage=3600, stale-while-revalidate=86400" }
      ]
    }
  ]
}
